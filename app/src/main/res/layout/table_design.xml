<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1">

    <TableRow
        android:id="@+id/firstRow"
        android:layout_width="match_parent"
        android:background="@drawable/table"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="S.No."
            android:textColor="#000"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="14dp" />

        <TextView
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:text="Particulars"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="14dp" />
    </TableRow>

        <TableRow
            android:id="@+id/secondRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/No"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:textAlignment="center"
                />

            <TextView
                android:id="@+id/SPart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monthly Fee"
                android:textSize="14dp"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/SAmt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2500"
                android:textAlignment="textEnd"
                android:textSize="14dp"
                android:layout_marginRight="5dp"
                android:textColor="@color/black"
                />
        </TableRow>

    <TableRow
        android:id="@+id/thirdRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/No1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/SPart2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Monthly Fee"
        android:textSize="14dp"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/SAmt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2500"
        android:textAlignment="textEnd"
        android:textSize="14dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/black" />
    </TableRow>

    <TableRow
        android:id="@+id/fourthRow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/table"
        android:layout_marginTop="150dp">

        <TextView
            android:id="@+id/STotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:layout_span="2"
            android:textAlignment="textEnd"
            />

        <TextView
            android:id="@+id/STAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2525"
            android:textSize="14dp"
            android:layout_marginRight="5dp"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            />
    </TableRow>

    <TableRow
        android:id="@+id/fifthRow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/table">

    <TextView
        android:id="@+id/SLastMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Balance from last month"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:layout_span="2"
        android:textAlignment="textEnd"
        />

    <TextView
        android:id="@+id/SBAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="14dp"
        android:layout_marginRight="5dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        />
    </TableRow>

    <TableRow
        android:id="@+id/sixthRow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/table">

        <TextView
            android:id="@+id/STotalB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total balance due"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:layout_span="2"
            android:textAlignment="textEnd"
            />

        <TextView
            android:id="@+id/STAmountB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2525"
            android:textSize="14dp"
            android:layout_marginRight="5dp"
            android:textAlignment="textEnd"
            android:textColor="@color/black"
            />
    </TableRow>

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/table">
    <TextView
        android:id="@+id/SAmtWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount In Word:- "
        android:textColor="@color/black"/>

        <TextView
            android:id="@+id/AmountW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/SAmtWord"
            android:layout_marginStart="126dp"
            android:textColor="@color/black"
            android:text="Two Thousand Five Hundred and Twenty Five Only"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/SRemark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/SAmtWord"
            android:layout_marginTop="15dp"
            android:text="Remarks:"/>

        <TextView
            android:id="@+id/Sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/SAmtWord"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:text="Remarks:"/>

        <TextView
            android:id="@+id/AccName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Sign"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="41dp"
            android:text="SSSSSS"
            android:textColor="@color/black" />

        <View
            android:layout_width="80dp"
            android:layout_height="1dp"
            android:layout_marginRight="20dp"
            android:background="@color/black"
            android:layout_below="@+id/AccName"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/Acc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Sign"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="23dp"
            android:text="Accountant"
            android:textColor="@color/black" />

    </RelativeLayout>
</TableLayout>